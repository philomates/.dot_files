#!/bin/sh

ln -s ~/.dot_files/.bashrc ~/.bashrc
ln -s ~/.dot_files/.zshrc ~/.zshrc
ln -s ~/.dot_files/.xmobarrc ~/.xmobarrc
ln -s ~/.dot_files/.conkyrc ~/.conkyrc
ln -s ~/.dot_files/.pylintrc ~/.pylintrc
ln -s ~/.dot_files/.xinitrc ~/.xinitrc
ln -s ~/.dot_files/.config/.awesome/rc.lua ~/.config/awesome/rc.lua
ln -s ~/.dot_files/.config/.awesome/theme.lua ~/.config/awesome/theme.lua
ln -sf ~/.dot_files/.config/nvim ~/.config/nvim
ln -sf ~/.dot_files/.config/sway ~/.config/sway

mkdir -p ~/.xmonad
ln -s ~/.dot_files/.xmonad/xmonad.hs ~/.xmonad/xmonad.hs

mkdir -p ~/.irssi
ln -s ~/.dot_files/.irssi/config ~/.irssi/config
